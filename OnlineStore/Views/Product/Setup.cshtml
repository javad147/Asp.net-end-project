@model OnlineStore.Data.Product


<!-- [ page-header ] start -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">Product</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Setup">Product</a></li>
            <li class="breadcrumb-item">Setup</li>
        </ul>
    </div>

</div>
<!-- [ page-header ] end -->
<!-- [ Main Content ] start -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-body lead-status">
                    <form method="post" asp-action="Setup" enctype="multipart/form-data">
                        <div class="row">
                            <div class="text-danger" asp-validation-summary="ModelOnly">
                            </div>
                            <div class="col-lg-6 mb-4">
                                <input type="hidden" asp-for="Id" />
                                <label class="form-label">Category</label>
                                <select asp-for="CategoryId"
                                        class="form-control"
                                        asp-items="@(new SelectList(ViewBag.categories,"Value", "Text"))">
                                </select>
                            </div>
                            <div class="col-lg-6 mb-4">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" placeholder="Name" asp-for="Name" required />
                            </div>
                            <div class="col-lg-6 mb-4">
                                <label class="form-label">Description</label>
                                <input type="text" class="form-control" placeholder="Description" asp-for="Description" required />
                            </div>
                            <div class="col-lg-6 mb-4">
                                <label class="form-label">Price</label>
                                <input type="number" class="form-control" placeholder="Price" asp-for="Price" required />
                            </div>
                            <div class="col-lg-6 mb-4">
                                <input type="file" name="myfile" id="file" accept=".png,.jpg,.jpeg,.gif,.tif" class="form-control-file" required />
                                <img id="img1" src="data:image/png;base64,@Model.Image" width="100" height="100" alt="your-image" class="img-rounded" />
                                <input asp-for="Image" type="hidden" value="@Model.Image">
                            </div>
                        </div>
                        <div class="row">
                            <div class="mt-5">
                                <button type="submit" class="btn btn-lg btn-primary w-100">Save</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- [ Main Content ] end -->
@section Scripts {
    <script src="~/admin/assets/vendors/js/select2.min.js"></script>
    <script src="~/admin/assets/vendors/js/select2-active.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#file").change(function () {
                if ($("#file").val() != "") {
                    $("#fileinput").prop("value", $("#file").val().split('\\').pop());
                    //to show new image at a time of image selected from file input type
                    if (this.files && this.files[0]) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $('#img1').attr('src', e.target.result);
                            $('input[name="Image"]').val(e.target.result);
                        }
                        reader.readAsDataURL(this.files[0]);
                    }
                }
            });
        });
    </script>
}